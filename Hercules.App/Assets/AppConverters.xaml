<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Hercules.App.Controls"
    xmlns:gp="using:GP.Windows.UI"
    mc:Ignorable="d">

    <local:NotRootToBooleanConverter x:Key="NotRootToBooleanConverter" />
    <local:NotRootToVisibilityConverter x:Key="NotRootToVisibilityConverter" />

    <gp:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    
    <gp:TrueWhenNotNullConverter x:Key="TrueWhenNotNullConverter" />

    <gp:IntToDarkBrushConverter x:Key="IntToDarkBrushConverter" />
    <gp:IntToLightBrushConverter x:Key="IntToLightBrushConverter" />

    <gp:BooleanInverseConverter x:Key="BooleanInverseConverter" />

    <gp:VisibleWhenNotNullConverter x:Key="VisibleWhenNotNullConverter" />
    <gp:VisibleWhenFalseConverter x:Key="VisibleWhenFalseConverter" />
    <gp:VisibleWhenTrueConverter x:Key="VisibleWhenTrueConverter" />
    <gp:ValueToIntConverter x:Key="ValueToIntConverter" />
</ResourceDictionary>
