    <gp:VisibleWhenTrueConverter x:Key="VisibleWhenTrueConverter" />
    
    <SolidColorBrush x:Key="ErrorBrush" Color="Red" />

    <SolidColorBrush x:Key="ThemeMainBrush" Color="#2B69CE" />
    <SolidColorBrush x:Key="ThemeDarkBrush" Color="#1A4A99" />
    <SolidColorBrush x:Key="ThemeLightBrush" Color="#609DFF" />

    <SolidColorBrush x:Key="ThemeButtonHoverBrush" Color="#D8E8FF" />
    <SolidColorBrush x:Key="ThemeButtonPressedBrush" Color="#CCE1FF" />
